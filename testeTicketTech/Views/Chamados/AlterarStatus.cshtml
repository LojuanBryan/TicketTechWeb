@model Chamados

@{
    ViewData["Title"] = "Alterar Status do Chamado";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">
                <i class="bi bi-gear-fill me-2"></i>
                Alterar Status do Chamado #@Model.ChamadoId
            </h3>
        </div>
        <div class="card-body">
            <!-- Informações do Chamado -->
            <div class="alert alert-info">
                <h5><i class="bi bi-info-circle me-2"></i>Informações do Chamado</h5>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Título:</strong> @Model.Titulo</p>
                        <p><strong>Dispositivo:</strong> @Model.Dispositivo</p>
                        <p><strong>Usuário ID:</strong> @Model.UsuarioId</p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong>Status Atual:</strong>
                            @if (Model.Status == "Aberto")
                            {
                                <span class="badge bg-warning text-dark">@Model.Status</span>
                            }
                            else if (Model.Status == "Em Andamento")
                            {
                                <span class="badge bg-info">@Model.Status</span>
                            }
                            else if (Model.Status == "Resolvido")
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                            else if (Model.Status == "Fechado")
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-dark">@Model.Status</span>
                            }
                        </p>
                        <p><strong>Data de Abertura:</strong> @Model.QuandoOcorreu.ToString("dd/MM/yyyy")</p>
                        <p><strong>Última Atualização:</strong> @Model.DataUltimaAtualizacao.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>

            <!-- Formulário para Alterar Status -->
            <form asp-action="AlterarStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ChamadoId" />

                <div class="mb-4">
                    <label class="form-label fw-bold fs-5">
                        <i class="bi bi-arrow-repeat me-2"></i>Selecione o Novo Status:
                    </label>
                    <select name="novoStatus" class="form-select form-select-lg" required>
                        <option value="">-- Selecione um status --</option>
                        <option value="Aberto" selected="@(Model.Status == "Aberto")">
                            🟡 Aberto
                        </option>
                        <option value="Em Andamento" selected="@(Model.Status == "Em Andamento")">
                            🔵 Em Andamento
                        </option>
                        <option value="Aguardando Usuário" selected="@(Model.Status == "Aguardando Usuário")">
                            🟠 Aguardando Usuário
                        </option>
                        <option value="Resolvido" selected="@(Model.Status == "Resolvido")">
                            🟢 Resolvido
                        </option>
                        <option value="Fechado" selected="@(Model.Status == "Fechado")">
                            ⚫ Fechado
                        </option>
                        <option value="Cancelado" selected="@(Model.Status == "Cancelado")">
                            🔴 Cancelado
                        </option>
                    </select>
                </div>

                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Atenção:</strong> Esta ação atualizará o status do chamado e registrará a data/hora da alteração.
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle me-2"></i>Confirmar Alteração
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Card com Descrição Completa -->
    <div class="card shadow mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-file-text me-2"></i>Descrição do Problema
            </h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <strong>Sintomas:</strong>
                <p class="ms-3">@Model.Sintomas</p>
            </div>
            <div class="mb-3">
                <strong>Onde Ocorreu:</strong>
                <p class="ms-3">@Model.OndeOcorreu</p>
            </div>
            <div class="mb-3">
                <strong>Descrição Detalhada:</strong>
                <div class="card bg-light ms-3">
                    <div class="card-body">
                        <p class="mb-0"
