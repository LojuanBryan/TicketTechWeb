@model IEnumerable<Chamados>
@using Newtonsoft.Json
@using testeTicketTech.Models
@using testeTicketTech.Enums

@{
    var sessaoUsuario = Context.Session.GetString("sessaoUsuarioLogado");
    UsuarioModel usuarioLogado = !string.IsNullOrEmpty(sessaoUsuario)
        ? JsonConvert.DeserializeObject<UsuarioModel>(sessaoUsuario)
        : null;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Chamados</h1>
        <div class="d-flex">
            @* Só mostra o botão Exportar se o usuário for Admin *@
            @if (usuarioLogado != null && usuarioLogado.Perfil == PerfilEnum.Admin)
            {
                <a asp-action="ExportarExcel" class="btn btn-success me-2">
                    <i class="bi bi-file-earmark-excel mx-1"></i> Exportar
                </a>
            }

            <a asp-action="Cadastrar" class="btn btn-primary">Novo Chamado</a>
        </div>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="minhaTabela" class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Status</th>
                <th>Última Atualização</th>
                <th>Dispositivo</th>
                <th>Sintomas</th>
                <th>Quando</th>
                <th>Onde</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var chamado in Model)
                {
                    <tr>
                        <td>@chamado.ChamadoId</td>
                        <td>@chamado.Titulo</td>
                        <td>@chamado.Status</td>
                        <td>@chamado.DataUltimaAtualizacao.ToString("g")</td>
                        <td>@chamado.Dispositivo</td>
                        <td>@chamado.Sintomas</td>
                        <td>@chamado.QuandoOcorreu.ToShortDateString()</td>
                        <td>@chamado.OndeOcorreu</td>
                        <td>
                            <a asp-controller="Chamados" asp-action="Editar" asp-route-id="@chamado.ChamadoId" class="btn btn-primary mx-2">Editar</a>
                            <a asp-controller="Chamados" asp-action="Excluir" asp-route-id="@chamado.ChamadoId" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">Nenhum chamado encontrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
