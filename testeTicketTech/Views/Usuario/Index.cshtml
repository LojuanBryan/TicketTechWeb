<-- teste -->

@model IEnumerable<testeTicketTech.Models.UsuarioModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Listagem de Usuários</h1>
        <a class="btn btn-primary" asp-action="Create">Adicionar novo Usuário</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="minhaTabela" class="table table-hover">

        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Login</th>
                <th>Email</th>
                <th>Data de cadastro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.DataCadastro</td>
                        <td>
                            <a asp-controller="Usuario" asp-action="Editar" asp-route-id="@usuario.Id" class="btn btn-primary btn-sm mx-1">Editar</a>
                            <a asp-controller="Usuario" asp-action="Excluir" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm mx-1">Excluir</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Nenhum usuário encontrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
