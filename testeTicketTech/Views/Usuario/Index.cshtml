@model List<testeTicketTech.Models.UsuarioModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Listagem de Usuários</h1>
        <a class="btn btn-primary" asp-action="Create">
            <i class="bi bi-person-plus me-2"></i>Adicionar novo Usuário
        </a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["MensagemErro"]
        </div>
    }

    <table id="minhaTabela" class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Login</th>
                <th>Email</th>
                <th>Data de cadastro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Id</td>
                        <td>@usuario.Nome</td>
                        <td>@usuario.Login</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.DataCadastro.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <a asp-controller="Usuario"
                               asp-action="Visualizar"
                               asp-route-id="@usuario.Id"
                               class="btn btn-info btn-sm mx-1"
                               title="Visualizar detalhes">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-controller="Usuario"
                               asp-action="Editar"
                               asp-route-id="@usuario.Id"
                               class="btn btn-primary btn-sm mx-1"
                               title="Editar usuário">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-controller="Usuario"
                               asp-action="Excluir"
                               asp-route-id="@usuario.Id"
                               class="btn btn-danger btn-sm mx-1"
                               title="Excluir usuário">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Nenhum usuário encontrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>