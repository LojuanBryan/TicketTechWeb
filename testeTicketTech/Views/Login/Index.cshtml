@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

<h1 class="text-center display-4 mb-4">Ticket Tech</h1>


<form asp-controller="Login" asp-action="Entrar" method="post">

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }


    <div class="mb-3">
        <input type="text" asp-for="Login" class="form-control" placeholder="Login">
        <span class="text-danger">@Html.ValidationMessageFor(x => x.Login)</span>
    </div>

    <div class="mb-3">
        <input type="password" asp-for="Senha" class="form-control" placeholder="Senha">
        <span class="text-danger">@Html.ValidationMessageFor(x => x.Senha)</span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="ConcordaLGPD" class="form-check-input" type="checkbox" />
        <label class="form-check-label" asp-for="ConcordaLGPD">
            Declaro que li e concordo com os Termos de Uso e Política de Privacidade geridas pela
            <a href="https://www.planalto.gov.br/ccivil_03/_ato2015-2018/2018/lei/l13709.htm" target="_blank">LGPD</a>.
        </label>
        <span class="text-danger">@Html.ValidationMessageFor(x => x.ConcordaLGPD)</span>
    </div>

    <div class="d-grid gap-2 col-12 mx-auto">
        <button type="submit" class="btn btn-primary btn-lg">Entrar</button>
    </div>

    <p>Não tem conta? <a asp-controller="Cadastro" asp-action="Index">Cadastre-se aqui</a></p>

</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
