@model testeTicketTech.Models.NovaSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastrar Nova Senha";
}

<h2 class="text-center mb-4">Cadastrar Nova Senha</h2>

<form asp-controller="Login" asp-action="CadastrarNovaSenha" method="post">
    <input type="hidden" asp-for="Token" />

    <div class="mb-3">
        <input type="password" asp-for="NovaSenha" class="form-control" placeholder="Nova Senha" />
        <span class="text-danger">@Html.ValidationMessageFor(x => x.NovaSenha)</span>
    </div>

    <div class="d-grid gap-2 col-12 mx-auto">
        <button type="submit" class="btn btn-primary btn-lg">Salvar Nova Senha</button>
        <a asp-controller="Login" asp-action="Index" class="btn btn-secondary btn-lg">Voltar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
